<% include ../partials/header %>
<div class="ui main text container segment">
	<div class="ui huge header">Edytuj <%=blog.title%></div>
<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
	<div class="field">
		<label>Tytuł</label>
		<input type="text" name="blog[title]" value="<%=blog.title%>">
	</div>
	<div class="field">
		<label>Zdjęcie</label>
		<input type="text" name="blog[image]" value="<%=blog.image%>">
	</div>
	<div class="field">
		<label>Tekst</label>
		<textarea name="blog[body]"><%=blog.body%>	
		</textarea>

	<input class="ui violet big basic button" type="submit">
	
</form>
</div>
